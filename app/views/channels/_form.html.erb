<div class="space-y-12">
  <div class="border-gray-900/10 pb-12">

  <%= form_with model: channel do |form| %>
    <div class="w-full md:w-auto">
      <%= form.label :name, :class => "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_field :name, :class => "block flex-1 border-1 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 w-full" %>
      <% @channel.errors.full_messages_for(:name).each do |message| %>
        <div class="text-braven-red"><%= message %></div>
      <% end %>
    </div>

    <div class="w-full md:w-auto mt-8">
      <%= form.label :url, :class => "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_field :url, :class => "block flex-1 border-1 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 w-full" %>
      <% @channel.errors.full_messages_for(:url).each do |message| %>
        <div class="text-braven-red"><%= message %></div>
      <% end %>
    </div>

    <div class="w-full md:w-auto mt-8">
      <%= form.label :description, :class => "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_field :description, :class => "block flex-1 border-1 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 w-full" %>
      <% @channel.errors.full_messages_for(:description).each do |message| %>
        <div class="text-braven-red"><%= message %></div>
      <% end %>
    </div>

    <div class="w-full md:w-auto mt-8">
      <%= form.label :image, :class => "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_field :image, :class => "block flex-1 border-1 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 w-full" %>
    </div>

    <div class="w-full md:w-auto mt-8">
      <%= form.submit :class => "leading-6 rounded-full bg-braven-red px-4 py-2.5 text-sm text-font-semibold text-white shadow-sm hover:bg-transparent hover:outline hover:outline-braven-red hover:text-braven-red hover-outline-2 grid grid-cols-2 gap-x-1" %>
    </div>

  <% end %>

  </div>
</div>